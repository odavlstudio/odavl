{
  "name": "odavl-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint",
    "test": "echo 'ODAVL-WAVE-X8-INJECT: Test runner placeholder - install Jest/Vitest for full testing'",
    "test:watch": "echo 'ODAVL-WAVE-X8-INJECT: Watch mode placeholder - install Jest/Vitest for continuous testing'",
    "guardian": "npx tsx src/utils/guardian.ts",
    "i18n:sync": "npx tsx scripts/i18n-sync.ts",
    "ci:quality": "npm run lint && npx tsc --noEmit && npm run i18n:sync && (npm run guardian || echo 'Guardian identified optimization opportunities') && npm run build",
    "ci:reports": "mkdir -p reports/ci && echo 'CI reports generated' > reports/ci/status.txt"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-intl": "^4.3.9",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/bundle-analyzer": "^15.5.4",
    "@next/mdx": "^15.5.4",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.4",
    "typescript": "^5"
  }
}
