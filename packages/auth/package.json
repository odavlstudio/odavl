{
  "name": "@odavl-studio/auth",
  "version": "1.0.0",
  "description": "Shared authentication library for ODAVL Studio",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./odavl-id": {
      "types": "./dist/odavl-id.d.ts",
      "import": "./dist/odavl-id.js",
      "require": "./dist/odavl-id.cjs"
    },
    "./device-code-flow": {
      "types": "./dist/device-code-flow.d.ts",
      "import": "./dist/device-code-flow.js",
      "require": "./dist/device-code-flow.cjs"
    },
    "./insight-middleware": {
      "types": "./dist/insight-middleware.d.ts",
      "import": "./dist/insight-middleware.js",
      "require": "./dist/insight-middleware.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/odavl-id.ts src/device-code-flow.ts src/insight-middleware.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/odavl-id.ts src/device-code-flow.ts src/insight-middleware.ts --format esm,cjs --dts --watch",
    "test": "vitest"
  },
  "keywords": [
    "auth",
    "authentication",
    "odavl"
  ],
  "author": "Mohammad Nawlo",
  "license": "MIT",
  "dependencies": {
    "@odavl/types": "workspace:^",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.6.2",
    "next": "^16.0.0",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.18"
  }
}