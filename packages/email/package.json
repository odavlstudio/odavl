{
  "name": "@odavl-studio/email",
  "version": "1.0.0",
  "description": "Email service for ODAVL Studio with verification and password reset",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "clean": "rimraf dist"
  },
  "keywords": [
    "email",
    "nodemailer",
    "verification",
    "password-reset",
    "odavl"
  ],
  "author": "ODAVL Studio",
  "license": "MIT",
  "dependencies": {
    "nodemailer": "^7.0.11"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.14",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.7.2"
  }
}
