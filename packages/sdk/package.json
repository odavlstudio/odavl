{
  "name": "@odavl-studio/sdk",
  "version": "1.0.0",
  "description": "Official SDK for ODAVL Studio - Integrate Insight, Autopilot, and Guardian into your applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./insight": {
      "types": "./dist/insight.d.ts",
      "import": "./dist/insight.js",
      "require": "./dist/insight.cjs"
    },
    "./autopilot": {
      "types": "./dist/autopilot.d.ts",
      "import": "./dist/autopilot.js",
      "require": "./dist/autopilot.cjs"
    },
    "./guardian": {
      "types": "./dist/guardian.d.ts",
      "import": "./dist/guardian.js",
      "require": "./dist/guardian.cjs"
    },
    "./plugin": {
      "types": "./dist/plugin-sdk.d.ts",
      "import": "./dist/plugin-sdk.js",
      "require": "./dist/plugin-sdk.cjs"
    },
    "./smart-client": {
      "types": "./dist/smart-client.d.ts",
      "import": "./dist/smart-client.js",
      "require": "./dist/smart-client.cjs"
    },
    "./cloud-client": {
      "types": "./dist/cloud-client.d.ts",
      "import": "./dist/cloud-client.js",
      "require": "./dist/cloud-client.cjs"
    },
    "./insight-cloud": {
      "types": "./dist/insight-cloud.d.ts",
      "import": "./dist/insight-cloud.js",
      "require": "./dist/insight-cloud.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/insight.ts src/autopilot.ts src/guardian.ts src/plugin-sdk.ts src/smart-client.ts src/cloud-client.ts src/insight-cloud.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/insight.ts src/autopilot.ts src/guardian.ts src/plugin-sdk.ts src/smart-client.ts src/cloud-client.ts src/insight-cloud.ts --format esm,cjs --dts --watch",
    "test": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "odavl",
    "sdk",
    "code-quality",
    "error-detection",
    "self-healing",
    "deployment-protection",
    "typescript",
    "automation"
  ],
  "author": "ODAVL Studio Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Monawlo812/odavl.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/Monawlo812/odavl/issues"
  },
  "homepage": "https://github.com/Monawlo812/odavl#readme",
  "publishConfig": {
    "access": "public",
    "registry": "http://localhost:4873"
  },
  "dependencies": {
    "@odavl-studio/insight-core": "workspace:^",
    "@odavl/oplayer": "workspace:*"
  },
  "peerDependencies": {
    "@odavl/oplayer": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@odavl/oplayer": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.18"
  }
}
