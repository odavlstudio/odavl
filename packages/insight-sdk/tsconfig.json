{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"]
