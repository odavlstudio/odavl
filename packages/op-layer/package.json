{
  "name": "@odavl/oplayer",
  "version": "1.0.0",
  "description": "ODAVL Protocol Layer - Shared utilities and protocols for product separation",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./protocols": {
      "types": "./dist/protocols.d.ts",
      "import": "./dist/protocols.js",
      "require": "./dist/protocols.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    },
    "./utilities": {
      "types": "./dist/utilities.d.ts",
      "import": "./dist/utilities.js",
      "require": "./dist/utilities.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./github": {
      "types": "./dist/github.d.ts",
      "import": "./dist/github.js",
      "require": "./dist/github.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/protocols.ts src/types.ts src/utilities.ts src/client.ts src/github.ts --format esm,cjs --dts --external @odavl-studio/insight-core",
    "dev": "tsup src/index.ts src/protocols.ts src/types.ts src/utilities.ts src/client.ts src/github.ts --format esm,cjs --dts --watch --external @odavl-studio/insight-core",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "odavl",
    "oplayer",
    "protocol-layer",
    "product-separation",
    "architecture"
  ],
  "author": "ODAVL Studio",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.23.8",
    "chalk": "^5.3.0",
    "@odavl-studio/insight-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.18"
  }
}
