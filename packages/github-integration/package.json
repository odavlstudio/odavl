{
  "name": "@odavl-studio/github-integration",
  "version": "2.0.0",
  "description": "GitHub App and Actions integration for ODAVL Studio",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./app": {
      "import": "./dist/app.js",
      "require": "./dist/app.cjs",
      "types": "./dist/app.d.ts"
    },
    "./webhooks": {
      "import": "./dist/webhooks.js",
      "require": "./dist/webhooks.cjs",
      "types": "./dist/webhooks.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/app.ts src/webhooks.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/app.ts src/webhooks.ts --format esm,cjs --dts --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/app": "^15.1.0",
    "@octokit/rest": "^21.0.2",
    "@octokit/webhooks": "^13.3.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.14.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "github",
    "github-app",
    "github-actions",
    "odavl",
    "code-quality",
    "automation"
  ],
  "author": "ODAVL Studio",
  "license": "MIT"
}
