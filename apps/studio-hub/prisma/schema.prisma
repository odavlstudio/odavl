// ODAVL Studio Hub - Database Schema
// Week 1: Foundation Models

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  role          Role      @default(USER)

  // Multi-tenancy
  orgId         String?
  organization  Organization? @relation(fields: [orgId], references: [id], onDelete: Cascade)

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  // API access
  apiKeys       ApiKey[]
  refreshTokens RefreshToken[]

  // CLI data sync (Phase 1.5)
  insightResults    InsightResult[]
  autopilotCliRuns  AutopilotCliRun[]
  guardianCliTests  GuardianCliTest[]
  usageRecords      UsageRecord[]

  // Phase 4.3: Cloud uploads
  insightRuns       InsightRun[] @relation("InsightRunToUser")
  autopilotRuns     AutopilotRun[] @relation("AutopilotRunToUser")
  guardianTests     GuardianTest[] @relation("GuardianTestToUser")
  insightMLData     InsightMLData[] @relation("InsightMLDataToUser")
  autopilotSnapshots AutopilotSnapshot[] @relation("AutopilotSnapshotToUser")
  autopilotRecipeTrusts AutopilotRecipeTrust[] @relation("AutopilotRecipeTrustToUser")
  guardianScreenshots GuardianScreenshot[] @relation("GuardianScreenshotToUser")
  guardianReports   GuardianReport[] @relation("GuardianReportToUser")

  // Audit trail
  auditLogs     AuditLog[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft delete for GDPR

  @@index([orgId])
  @@index([email])
  @@index([deletedAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([expires])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@index([expires])
}

enum Role {
  USER      // Regular user
  ADMIN     // Organization admin
  OWNER     // Organization owner
  SUPERADMIN // Platform super admin
}

// ============================================
// ORGANIZATIONS & MULTI-TENANCY
// ============================================

model Organization {
  id            String    @id @default(cuid())
  name          String
  slug          String    @unique
  logo          String?

  // Subscription
  plan          Plan      @default(FREE)
  stripeCustomerId String? @unique
  stripeSubscriptionId String? @unique

  // Usage tracking
  monthlyApiCalls Int @default(0)
  monthlyInsightRuns Int @default(0)
  monthlyAutopilotRuns Int @default(0)
  monthlyGuardianTests Int @default(0)

  // Relations
  users         User[]
  projects      Project[]
  apiKeys       ApiKey[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([slug])
  @@index([plan])
}

enum Plan {
  FREE        // 100 API calls/month
  PRO         // 10K API calls/month - $29/month
  ENTERPRISE  // Unlimited - Custom pricing
}

model Project {
  id            String    @id @default(cuid())
  name          String
  slug          String
  description   String?

  // Multi-tenancy
  orgId         String
  organization  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  // Product data
  insightRuns   InsightRun[]
  insightIssues InsightIssue[] @relation("InsightIssueToProject")
  autopilotRuns AutopilotRun[]
  guardianTests GuardianTest[]

  // Settings
  settings      Json      @default("{}")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([orgId, slug])
  @@index([orgId])
}

// ============================================
// API KEYS & AUTHENTICATION
// ============================================

model ApiKey {
  id            String    @id @default(cuid())
  name          String
  key           String    @unique // Hashed
  lastUsedAt    DateTime?
  revokedAt     DateTime? // For manual revocation

  // Scoped permissions
  scopes        String[]  // ['insight:read', 'autopilot:write', etc.]

  // Multi-tenancy
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  orgId         String
  organization  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  createdAt     DateTime  @default(now())
  expiresAt     DateTime?

  @@index([key])
  @@index([orgId])
  @@index([userId])
  @@index([revokedAt])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}

// ============================================
// INSIGHT PRODUCT DATA (Updated for Phase 4.3 Uploads)
// ============================================

model InsightRun {
  id            String    @id @default(cuid())

  projectId     String?
  project       Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // User tracking for CLI uploads
  userId        String?
  user          User?     @relation("InsightRunToUser", fields: [userId], references: [id], onDelete: Cascade)

  // Results
  diagnosticsCount Int    @default(0) // From CLI upload
  totalIssues   Int       @default(0)
  criticalIssues Int      @default(0)
  highIssues    Int       @default(0)
  mediumIssues  Int       @default(0)
  lowIssues     Int       @default(0)

  // Performance
  duration      Int?      // milliseconds
  filesScanned  Int       @default(0)

  // CLI upload data
  results       Json?     // Full diagnostics from CLI
  status        String    @default("completed")
  timestamp     DateTime  @default(now())

  issues        InsightIssue[]

  createdAt     DateTime  @default(now())

  @@index([projectId, createdAt])
  @@index([userId, timestamp])
}

model InsightIssue {
  id            String    @id @default(cuid())

  runId         String
  run           InsightRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  // Direct project reference for faster queries (denormalized)
  projectId     String?
  project       Project?  @relation("InsightIssueToProject", fields: [projectId], references: [id], onDelete: Cascade)

  // Issue details
  severity      String    // 'error', 'warning', 'info' from CLI
  message       String    @db.Text
  detector      String?   // 'typescript', 'eslint', 'security', etc.
  source        String    @default("ODAVL") // Source of diagnostic
  code          String?   // Error code

  // Location
  filePath      String
  line          Int?
  column        Int?

  // Resolution
  resolved      Boolean   @default(false)
  resolvedAt    DateTime?
  resolvedBy    String?

  createdAt     DateTime  @default(now())

  @@index([runId])
  @@index([projectId])
  @@index([severity])
  @@index([resolved])
}

enum Severity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
  INFO
}

// ============================================
// AUTOPILOT PRODUCT DATA (Updated for Phase 4.3 Uploads)
// ============================================

model AutopilotRun {
  id            String    @id @default(cuid())

  projectId     String?
  project       Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // User tracking for CLI uploads
  userId        String?
  user          User?     @relation("AutopilotRunToUser", fields: [userId], references: [id], onDelete: Cascade)

  // CLI upload fields
  runId         String    @unique // External runId from CLI
  timestamp     DateTime  @default(now())
  phase         String    @default("completed") // O-D-A-V-L phase
  editsCount    Int       @default(0)
  ledger        Json?     // Full O-D-A-V-L cycle ledger

  // O-D-A-V-L phases
  status        String    @default("completed") // 'running', 'completed', 'failed', 'rolled_back'
  observeDuration  Int?    // milliseconds
  decideDuration   Int?
  actDuration      Int?
  verifyDuration   Int?
  learnDuration    Int?
  totalDuration    Int?

  // Results
  filesModified Int       @default(0)
  linesChanged  Int       @default(0)
  recipesApplied String[] // Recipe IDs

  // Snapshots for undo
  snapshotPath  String?

  edits         AutopilotEdit[]

  createdAt     DateTime  @default(now())
  completedAt   DateTime?

  @@index([projectId, createdAt])
  @@index([userId, timestamp])
  @@index([runId])
  @@index([status])
}

model AutopilotEdit {
  id            String    @id @default(cuid())

  runId         String
  run           AutopilotRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  filePath      String
  linesAdded    Int       @default(0)
  linesRemoved  Int       @default(0)
  recipeId      String

  createdAt     DateTime  @default(now())

  @@index([runId])
}

// ============================================
// GUARDIAN PRODUCT DATA (Updated for Phase 4.3 Uploads)
// ============================================

model GuardianTest {
  id            String    @id @default(cuid())

  projectId     String?
  project       Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // User tracking for CLI uploads
  userId        String?
  user          User?     @relation("GuardianTestToUser", fields: [userId], references: [id], onDelete: Cascade)

  // CLI upload fields
  testRunId     String    @unique // External testRunId from CLI
  timestamp     DateTime  @default(now())
  testsCount    Int       @default(0)
  results       Json?     // Full test results from CLI

  // Test target
  url           String
  environment   String    @default("production") // 'staging', 'production'

  // Results
  status        String    @default("completed") // 'running', 'passed', 'failed', 'cancelled'
  passed        Int       @default(0) // Number of passed tests
  failed        Int       @default(0) // Number of failed tests
  score         Int?      // 0-100

  // Performance metrics
  ttfb          Int?      // milliseconds
  lcp           Int?
  fid           Int?
  cls           Float?

  // Test categories
  accessibility Json?
  performance   Json?
  security      Json?
  seo           Json?

  duration      Int?      // milliseconds

  createdAt     DateTime  @default(now())
  completedAt   DateTime?

  @@index([projectId, createdAt])
  @@index([userId, timestamp])
  @@index([testRunId])
  @@index([url])
  @@index([status])
}

// ============================================
// AUDIT & COMPLIANCE
// ============================================

model AuditLog {
  id            String    @id @default(cuid())

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  action        String    // 'data_export', 'project_created', etc.
  resource      String?   // Resource type affected
  resourceId    String?   // Resource ID
  metadata      Json?     // Additional context

  ipAddress     String?
  userAgent     String?

  timestamp     DateTime  @default(now())

  @@index([userId, timestamp])
  @@index([action])
  @@index([timestamp])
}

// ============================================
// OBSERVABILITY & MONITORING (Week 11)
// ============================================

model PerformanceMetric {
  id            String    @id @default(cuid())

  name          String    // Metric name (e.g., 'web_vitals.lcp', 'api.call', 'db.query')
  value         Float     // Metric value
  unit          String    // Unit of measurement ('ms', 'bytes', 'count')
  tags          Json?     // Additional tags for filtering

  userId        String?

  timestamp     DateTime  @default(now())

  @@index([name, timestamp])
  @@index([userId, timestamp])
  @@index([timestamp])
}

// ============================================
// CLI DATA SYNC (Phase 1.5) - User-Based
// ============================================

model InsightResult {
  id              String    @id @default(cuid())

  // Ownership
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  orgId           String?

  // Workspace info
  workspacePath   String
  workspaceName   String?

  // Analysis data
  issues          Json      // Array of issues
  summary         Json      // { total, critical, high, medium, low }
  detectors       String[]  // ['typescript', 'eslint', 'security']

  // Metadata
  timestamp       DateTime
  createdAt       DateTime  @default(now())

  @@index([userId, createdAt])
  @@index([orgId, createdAt])
  @@index([timestamp])
}

model AutopilotCliRun {
  id              String    @id @default(cuid())

  // Ownership
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  orgId           String?

  // Run info
  runId           String    @unique
  workspacePath   String
  workspaceName   String?

  // Run data
  phases          String[]  // ['observe', 'decide', 'act', 'verify', 'learn']
  ledger          Json?     // Complete ledger data
  status          String    @default("completed") // completed, failed, partial

  // Metadata
  timestamp       DateTime
  createdAt       DateTime  @default(now())

  @@index([userId, createdAt])
  @@index([orgId, createdAt])
  @@index([runId])
  @@index([timestamp])
}

model GuardianCliTest {
  id              String    @id @default(cuid())

  // Ownership
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  orgId           String?

  // Product info
  productPath     String
  productName     String?
  productType     String    // 'insight', 'autopilot', 'guardian', 'auto'

  // Test results
  readinessScore  Int
  status          String    // 'ready', 'needs-attention', 'not-ready'
  issues          Json      // Array of issues
  autoFixable     Int       @default(0)

  // Metadata
  timestamp       DateTime
  createdAt       DateTime  @default(now())

  @@index([userId, createdAt])
  @@index([orgId, createdAt])
  @@index([readinessScore])
  @@index([timestamp])
}

model UsageRecord {
  id              String    @id @default(cuid())

  // Ownership
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  orgId           String?

  // Usage tracking
  product         String    // 'insight', 'autopilot', 'guardian'
  action          String    // 'analyze', 'run', 'test'
  endpoint        String    // API endpoint called

  // Rate limiting
  ipAddress       String?
  apiKeyId        String?

  // Billing
  billable        Boolean   @default(true)
  credits         Int       @default(1) // Credits consumed

  // Metadata
  timestamp       DateTime  @default(now())

  @@index([userId, timestamp])
  @@index([orgId, timestamp])
  @@index([product, action])
  @@index([timestamp])
}

// ============================================
// PHASE 4.3: ADDITIONAL CLI UPLOAD MODELS
// ============================================

model InsightMLData {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation("InsightMLDataToUser", fields: [userId], references: [id], onDelete: Cascade)
  timestamp DateTime
  data      Json     // ML training dataset

  createdAt DateTime @default(now())

  @@index([userId, timestamp])
}

model AutopilotSnapshot {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation("AutopilotSnapshotToUser", fields: [userId], references: [id], onDelete: Cascade)
  projectId  String?
  snapshotId String   @unique
  timestamp  DateTime
  filesCount Int      @default(0)
  data       Json     // Undo snapshot

  createdAt DateTime @default(now())

  @@index([userId, timestamp])
  @@index([snapshotId])
}

model AutopilotRecipeTrust {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation("AutopilotRecipeTrustToUser", fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  timestamp DateTime
  data      Json     // Recipe trust scores

  createdAt DateTime @default(now())

  @@index([userId, timestamp])
}

model GuardianScreenshot {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation("GuardianScreenshotToUser", fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  testRunId String
  fileName  String
  data      String   @db.Text // base64 image
  timestamp DateTime

  createdAt DateTime @default(now())

  @@index([userId, timestamp])
  @@index([testRunId])
}

model GuardianReport {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation("GuardianReportToUser", fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  testRunId String
  type      String   // 'lighthouse', 'accessibility'
  timestamp DateTime
  data      Json     // Report data

  createdAt DateTime @default(now())

  @@index([userId, timestamp])
  @@index([testRunId])
  @@index([type])
}

}

