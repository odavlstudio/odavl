{
  "version": "1.0.0",
  "title": "Pod CPU Stress Test - Resource Exhaustion",
  "description": "Stresses CPU on studio-hub pods to test resource limits, autoscaling behavior, and application performance under high load.",
  "tags": [
    "resource",
    "cpu",
    "stress",
    "performance"
  ],
  "configuration": {
    "kubernetes_namespace": {
      "type": "env",
      "key": "CHAOS_K8S_NAMESPACE",
      "default": "odavl-staging"
    },
    "base_url": {
      "type": "env",
      "key": "BASE_URL",
      "default": "https://staging.odavl.studio"
    },
    "cpu_workers": {
      "type": "env",
      "key": "CPU_WORKERS",
      "default": "2"
    },
    "duration_seconds": {
      "type": "env",
      "key": "DURATION_SECONDS",
      "default": "60"
    }
  },
  "steady-state-hypothesis": {
    "title": "Pods have sufficient CPU resources",
    "probes": [
      {
        "type": "probe",
        "name": "check-cpu-usage",
        "tolerance": {
          "type": "range",
          "target": "value",
          "range": [0, 70]
        },
        "provider": {
          "type": "python",
          "module": "chaosprometheus.probes",
          "func": "query_prometheus",
          "arguments": {
            "query": "avg(rate(container_cpu_usage_seconds_total{pod=~\"studio-hub-.*\"}[1m])) * 100",
            "endpoint": "${prometheus_url}"
          }
        }
      },
      {
        "type": "probe",
        "name": "application-responsive",
        "tolerance": {
          "type": "http",
          "status": 200,
          "timeout": 3
        },
        "provider": {
          "type": "http",
          "url": "${base_url}/api/health",
          "timeout": 3
        }
      },
      {
        "type": "probe",
        "name": "all-pods-running",
        "tolerance": {
          "type": "probe",
          "target": "status.phase",
          "pattern": "Running"
        },
        "provider": {
          "type": "python",
          "module": "chaosk8s.pod.probes",
          "func": "pods_in_phase",
          "arguments": {
            "label_selector": "app=studio-hub",
            "phase": "Running",
            "ns": "${kubernetes_namespace}"
          }
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "stress-pod-cpu",
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.actions",
        "func": "exec_in_pods",
        "arguments": {
          "label_selector": "app=studio-hub",
          "ns": "${kubernetes_namespace}",
          "cmd": "stress-ng --cpu ${cpu_workers} --timeout ${duration_seconds}s",
          "qty": 1,
          "rand": true
        }
      },
      "pauses": {
        "after": 10
      }
    },
    {
      "type": "probe",
      "name": "verify-cpu-usage-increased",
      "tolerance": {
        "type": "range",
        "target": "value",
        "range": [70, 100]
      },
      "provider": {
        "type": "python",
        "module": "chaosprometheus.probes",
        "func": "query_prometheus",
        "arguments": {
          "query": "avg(rate(container_cpu_usage_seconds_total{pod=~\"studio-hub-.*\"}[1m])) * 100",
          "endpoint": "${prometheus_url}"
        }
      },
      "pauses": {
        "after": 5
      }
    },
    {
      "type": "probe",
      "name": "test-application-under-stress",
      "tolerance": {
        "type": "http",
        "status": [200, 503, 504]
      },
      "provider": {
        "type": "http",
        "url": "${base_url}/api/trpc/insight.getIssues?input={\"limit\":10}",
        "timeout": 10
      },
      "pauses": {
        "after": 5
      }
    },
    {
      "type": "probe",
      "name": "monitor-response-time-degradation",
      "tolerance": true,
      "provider": {
        "type": "python",
        "module": "chaosprometheus.probes",
        "func": "query_prometheus",
        "arguments": {
          "query": "histogram_quantile(0.95, rate(http_request_duration_milliseconds_bucket[1m]))",
          "endpoint": "${prometheus_url}"
        }
      },
      "pauses": {
        "after": 10
      }
    },
    {
      "type": "probe",
      "name": "check-autoscaling-trigger",
      "tolerance": true,
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.probes",
        "func": "count_pods",
        "arguments": {
          "label_selector": "app=studio-hub",
          "ns": "${kubernetes_namespace}"
        }
      },
      "pauses": {
        "after": 20
      }
    },
    {
      "type": "action",
      "name": "wait-for-stress-to-complete",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["${duration_seconds}"]
      }
    },
    {
      "type": "probe",
      "name": "verify-cpu-usage-normalized",
      "tolerance": {
        "type": "range",
        "target": "value",
        "range": [0, 70]
      },
      "provider": {
        "type": "python",
        "module": "chaosprometheus.probes",
        "func": "query_prometheus",
        "arguments": {
          "query": "avg(rate(container_cpu_usage_seconds_total{pod=~\"studio-hub-.*\"}[1m])) * 100",
          "endpoint": "${prometheus_url}"
        }
      },
      "pauses": {
        "after": 10
      }
    },
    {
      "type": "probe",
      "name": "verify-application-recovered",
      "tolerance": {
        "type": "http",
        "status": 200,
        "timeout": 3
      },
      "provider": {
        "type": "http",
        "url": "${base_url}/api/health",
        "timeout": 3
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "kill-stress-processes",
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.actions",
        "func": "exec_in_pods",
        "arguments": {
          "label_selector": "app=studio-hub",
          "ns": "${kubernetes_namespace}",
          "cmd": "pkill -9 stress-ng"
        }
      }
    }
  ]
}
