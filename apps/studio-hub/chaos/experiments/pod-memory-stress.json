{
  "version": "1.0.0",
  "title": "Pod Memory Stress Test - Memory Leak Simulation",
  "description": "Simulates memory exhaustion on studio-hub pods to test OOMKiller behavior, memory limits, and application recovery from memory pressure.",
  "tags": [
    "resource",
    "memory",
    "stress",
    "oom"
  ],
  "configuration": {
    "kubernetes_namespace": {
      "type": "env",
      "key": "CHAOS_K8S_NAMESPACE",
      "default": "odavl-staging"
    },
    "base_url": {
      "type": "env",
      "key": "BASE_URL",
      "default": "https://staging.odavl.studio"
    },
    "memory_size_mb": {
      "type": "env",
      "key": "MEMORY_SIZE_MB",
      "default": "512"
    },
    "duration_seconds": {
      "type": "env",
      "key": "DURATION_SECONDS",
      "default": "60"
    }
  },
  "steady-state-hypothesis": {
    "title": "Pods have sufficient memory resources",
    "probes": [
      {
        "type": "probe",
        "name": "check-memory-usage",
        "tolerance": {
          "type": "range",
          "target": "value",
          "range": [0, 80]
        },
        "provider": {
          "type": "python",
          "module": "chaosprometheus.probes",
          "func": "query_prometheus",
          "arguments": {
            "query": "avg(container_memory_usage_bytes{pod=~\"studio-hub-.*\"} / container_spec_memory_limit_bytes{pod=~\"studio-hub-.*\"}) * 100",
            "endpoint": "${prometheus_url}"
          }
        }
      },
      {
        "type": "probe",
        "name": "no-oom-kills",
        "tolerance": {
          "type": "equals",
          "target": "value",
          "value": 0
        },
        "provider": {
          "type": "python",
          "module": "chaosprometheus.probes",
          "func": "query_prometheus",
          "arguments": {
            "query": "increase(container_oom_events_total{pod=~\"studio-hub-.*\"}[5m])",
            "endpoint": "${prometheus_url}"
          }
        }
      },
      {
        "type": "probe",
        "name": "application-healthy",
        "tolerance": {
          "type": "http",
          "status": 200
        },
        "provider": {
          "type": "http",
          "url": "${base_url}/api/health",
          "timeout": 5
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "stress-pod-memory",
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.actions",
        "func": "exec_in_pods",
        "arguments": {
          "label_selector": "app=studio-hub",
          "ns": "${kubernetes_namespace}",
          "cmd": "stress-ng --vm 1 --vm-bytes ${memory_size_mb}M --timeout ${duration_seconds}s",
          "qty": 1,
          "rand": true
        }
      },
      "pauses": {
        "after": 10
      }
    },
    {
      "type": "probe",
      "name": "verify-memory-usage-increased",
      "tolerance": {
        "type": "range",
        "target": "value",
        "range": [70, 100]
      },
      "provider": {
        "type": "python",
        "module": "chaosprometheus.probes",
        "func": "query_prometheus",
        "arguments": {
          "query": "avg(container_memory_usage_bytes{pod=~\"studio-hub-.*\"} / container_spec_memory_limit_bytes{pod=~\"studio-hub-.*\"}) * 100",
          "endpoint": "${prometheus_url}"
        }
      },
      "pauses": {
        "after": 5
      }
    },
    {
      "type": "probe",
      "name": "test-application-under-memory-pressure",
      "tolerance": {
        "type": "http",
        "status": [200, 503, 504]
      },
      "provider": {
        "type": "http",
        "url": "${base_url}/api/trpc/insight.getIssues?input={\"limit\":10}",
        "timeout": 10
      },
      "pauses": {
        "after": 5
      }
    },
    {
      "type": "probe",
      "name": "check-for-oom-kills",
      "tolerance": true,
      "provider": {
        "type": "python",
        "module": "chaosprometheus.probes",
        "func": "query_prometheus",
        "arguments": {
          "query": "increase(container_oom_events_total{pod=~\"studio-hub-.*\"}[1m])",
          "endpoint": "${prometheus_url}"
        }
      },
      "pauses": {
        "after": 5
      }
    },
    {
      "type": "probe",
      "name": "monitor-pod-restarts",
      "tolerance": true,
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.probes",
        "func": "read_pod_status",
        "arguments": {
          "label_selector": "app=studio-hub",
          "ns": "${kubernetes_namespace}"
        }
      },
      "pauses": {
        "after": 10
      }
    },
    {
      "type": "action",
      "name": "wait-for-stress-to-complete",
      "provider": {
        "type": "process",
        "path": "sleep",
        "arguments": ["${duration_seconds}"]
      }
    },
    {
      "type": "probe",
      "name": "verify-memory-usage-normalized",
      "tolerance": {
        "type": "range",
        "target": "value",
        "range": [0, 80]
      },
      "provider": {
        "type": "python",
        "module": "chaosprometheus.probes",
        "func": "query_prometheus",
        "arguments": {
          "query": "avg(container_memory_usage_bytes{pod=~\"studio-hub-.*\"} / container_spec_memory_limit_bytes{pod=~\"studio-hub-.*\"}) * 100",
          "endpoint": "${prometheus_url}"
        }
      },
      "pauses": {
        "after": 10
      }
    },
    {
      "type": "probe",
      "name": "verify-pods-recovered",
      "tolerance": {
        "type": "probe",
        "target": "status.phase",
        "pattern": "Running"
      },
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.probes",
        "func": "pods_in_phase",
        "arguments": {
          "label_selector": "app=studio-hub",
          "phase": "Running",
          "ns": "${kubernetes_namespace}"
        }
      },
      "pauses": {
        "after": 5
      }
    },
    {
      "type": "probe",
      "name": "verify-application-recovered",
      "tolerance": {
        "type": "http",
        "status": 200
      },
      "provider": {
        "type": "http",
        "url": "${base_url}/api/health",
        "timeout": 5
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "kill-stress-processes",
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.actions",
        "func": "exec_in_pods",
        "arguments": {
          "label_selector": "app=studio-hub",
          "ns": "${kubernetes_namespace}",
          "cmd": "pkill -9 stress-ng"
        }
      }
    },
    {
      "type": "action",
      "name": "restart-oomkilled-pods",
      "provider": {
        "type": "python",
        "module": "chaosk8s.pod.actions",
        "func": "terminate_pods",
        "arguments": {
          "label_selector": "app=studio-hub",
          "ns": "${kubernetes_namespace}",
          "phase_selector": "Failed"
        }
      }
    }
  ]
}
