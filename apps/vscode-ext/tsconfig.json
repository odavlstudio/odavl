{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vscode",
      "react",
      "react-dom"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "../../node_modules/.pnpm/vite*",
    "../../node_modules/.pnpm/@vitest*",
    "src/**/*.test.ts"
  ]
}