{
  "name": "odavl",
  "displayName": "ODAVL Control",
  "publisher": "odavl",
  "description": "Autonomous code quality with enterprise safety gates.",
  "version": "1.0.0",
  "icon": "media/logo.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "odavl": [
        {
          "id": "odavlDashboard",
          "name": "Dashboard"
        },
        {
          "id": "odavlRecipes",
          "name": "Recipes"
        },
        {
          "id": "odavlActivity",
          "name": "Activity"
        },
        {
          "id": "odavlConfig",
          "name": "Configuration"
        },
        {
          "id": "odavlControl",
          "name": "Control"
        },
        {
          "id": "odavlIntelligence",
          "name": "Intelligence"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "odavl",
          "title": "ODAVL Control",
          "icon": "media/logo.png"
        }
      ]
    },
    "commands": [
      {
        "command": "odavl.control",
        "title": "ODAVL: Show Control Panel",
        "icon": "$(pulse)"
      },
      {
        "command": "odavl.runCycle",
        "title": "Run ODAVL Cycle",
        "icon": "$(play)"
      },
      {
        "command": "odavl.refresh",
        "title": "Refresh All Views",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.refreshDashboard",
        "title": "Refresh Dashboard",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.refreshRecipes",
        "title": "Refresh Recipes",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.refreshActivity",
        "title": "Refresh Activity",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.refreshConfig",
        "title": "Refresh Configuration",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.showAnalytics",
        "title": "Show Analytics Dashboard",
        "icon": "$(graph)"
      },
      {
        "command": "odavl.refreshIntelligence",
        "title": "Refresh Intelligence",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.observe",
        "title": "Run Observe Phase",
        "icon": "$(eye)"
      },
      {
        "command": "odavl.decide",
        "title": "Run Decide Phase",
        "icon": "$(lightbulb)"
      },
      {
        "command": "odavl.act",
        "title": "Run Act Phase",
        "icon": "$(play)"
      },
      {
        "command": "odavl.verify",
        "title": "Run Verify Phase",
        "icon": "$(check)"
      },
      {
        "command": "odavl.learn",
        "title": "Run Learn Phase",
        "icon": "$(book)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "odavl.runCycle",
          "when": "view == odavlControl",
          "group": "navigation"
        },
        {
          "command": "odavl.refresh",
          "when": "view == odavlControl",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshDashboard",
          "when": "view == odavlDashboard",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshRecipes",
          "when": "view == odavlRecipes",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshActivity",
          "when": "view == odavlActivity",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshConfig",
          "when": "view == odavlConfig",
          "group": "navigation"
        },
        {
          "command": "odavl.showAnalytics",
          "when": "view == odavlIntelligence",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshIntelligence",
          "when": "view == odavlIntelligence",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/odavlstudio/odavl.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.2",
    "ovsx": "^0.10.6",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
