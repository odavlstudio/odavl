{
  "name": "odavl",
  "displayName": "ODAVL",
  "publisher": "odavl",
  "description": "Autonomous code quality with enterprise safety gates.",
  "version": "0.1.1",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:.odavl/"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "odavl": [
        {
          "id": "odavlDoctor",
          "name": "Doctor Monitor",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "odavl",
          "title": "ODAVL",
          "icon": "assets/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "odavl.doctor",
        "title": "ODAVL: Doctor Mode",
        "icon": "$(pulse)"
      },
      {
        "command": "odavl.runCycle",
        "title": "Run ODAVL Cycle",
        "icon": "$(play)"
      },
      {
        "command": "odavl.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "odavl.runCycle",
          "when": "view == odavlDoctor",
          "group": "navigation"
        },
        {
          "command": "odavl.refresh",
          "when": "view == odavlDoctor",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/odavl-org/odavl_studio.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.2",
    "ovsx": "^0.10.6",
    "typescript": "5.5.4"
  }
}
