{
  "name": "odavl",
  "displayName": "ODAVL",
  "publisher": "odavl",
  "description": "Autonomous code quality with enterprise safety gates.",
  "version": "1.0.0",
  "icon": "assets/odavl.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "odavl": [
        {
          "id": "odavlDashboard",
          "name": "Dashboard"
        },
        {
          "id": "odavlRecipes",
          "name": "Recipes"
        },
        {
          "id": "odavlActivity",
          "name": "Activity"
        },
        {
          "id": "odavlConfig",
          "name": "Configuration"
        },
        {
          "id": "odavlDoctor",
          "name": "Doctor"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "odavl",
          "title": "ODAVL",
          "icon": "assets/odavl.png"
        }
      ]
    },
    "commands": [
      {
        "command": "odavl.doctor",
        "title": "ODAVL: Doctor Mode",
        "icon": "$(pulse)"
      },
      {
        "command": "odavl.runCycle",
        "title": "Run ODAVL Cycle",
        "icon": "$(play)"
      },
      {
        "command": "odavl.refresh",
        "title": "Refresh All Views",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.refreshDashboard",
        "title": "Refresh Dashboard",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.refreshRecipes",
        "title": "Refresh Recipes",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.refreshActivity",
        "title": "Refresh Activity",
        "icon": "$(refresh)"
      },
      {
        "command": "odavl.refreshConfig",
        "title": "Refresh Configuration",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "odavl.runCycle",
          "when": "view == odavlDoctor",
          "group": "navigation"
        },
        {
          "command": "odavl.refresh",
          "when": "view == odavlDoctor",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshDashboard",
          "when": "view == odavlDashboard",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshRecipes",
          "when": "view == odavlRecipes",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshActivity",
          "when": "view == odavlActivity",
          "group": "navigation"
        },
        {
          "command": "odavl.refreshConfig",
          "when": "view == odavlConfig",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/odavlstudio/odavl.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.2",
    "ovsx": "^0.10.6",
    "typescript": "5.5.4"
  }
}
