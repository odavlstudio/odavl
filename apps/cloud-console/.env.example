# ODAVL Cloud Console - Environment Variables

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/odavl_cloud?schema=public"

# NextAuth.js (Authentication)
NEXTAUTH_URL="http://localhost:3003"
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars-long-please-change-this"

# OAuth Providers (GitHub)
GITHUB_ID="your-github-oauth-app-client-id"
GITHUB_SECRET="your-github-oauth-app-client-secret"

# OAuth Providers (Google)
GOOGLE_ID="your-google-oauth-client-id"
GOOGLE_SECRET="your-google-oauth-client-secret"

# Stripe (Billing) - Optional for now
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_PRO="price_..."
STRIPE_PRICE_ENTERPRISE="price_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Email (Verification & Password Reset)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@odavl.studio"

# Monitoring & Observability
SENTRY_DSN="https://your-sentry-dsn@sentry.io/your-project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/your-project-id"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
LOG_LEVEL="info"

# RBAC & Multi-Tenancy (Batch 7)
# Default organization for new users (optional)
DEFAULT_ORG_SLUG="default"
