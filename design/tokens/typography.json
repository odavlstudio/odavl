{
  "$schema": "https://json.schemastore.org/design-tokens.json",
  "description": "ODAVL Studio Design System - Typography Tokens",
  "version": "2.0.0",
  "typography": {
    "fontFamily": {
      "sans": {
        "value": "'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "type": "fontFamily",
        "description": "Primary font family for UI text"
      },
      "mono": {
        "value": "'JetBrains Mono', 'Fira Code', 'Consolas', 'Monaco', 'Courier New', monospace",
        "type": "fontFamily",
        "description": "Monospace font for code"
      },
      "display": {
        "value": "'Inter', system-ui, sans-serif",
        "type": "fontFamily",
        "description": "Display font for large headings"
      }
    },
    "fontSize": {
      "xs": {
        "value": "0.75rem",
        "pixelValue": "12px",
        "type": "dimension",
        "description": "Extra small - captions, labels, timestamps"
      },
      "sm": {
        "value": "0.875rem",
        "pixelValue": "14px",
        "type": "dimension",
        "description": "Small - secondary text, form labels"
      },
      "base": {
        "value": "1rem",
        "pixelValue": "16px",
        "type": "dimension",
        "description": "Base - body text, default size"
      },
      "lg": {
        "value": "1.125rem",
        "pixelValue": "18px",
        "type": "dimension",
        "description": "Large - emphasized body text"
      },
      "xl": {
        "value": "1.25rem",
        "pixelValue": "20px",
        "type": "dimension",
        "description": "Extra large - small headings (h4)"
      },
      "2xl": {
        "value": "1.5rem",
        "pixelValue": "24px",
        "type": "dimension",
        "description": "2x large - medium headings (h3)"
      },
      "3xl": {
        "value": "1.875rem",
        "pixelValue": "30px",
        "type": "dimension",
        "description": "3x large - large headings (h2)"
      },
      "4xl": {
        "value": "2.25rem",
        "pixelValue": "36px",
        "type": "dimension",
        "description": "4x large - page titles (h1)"
      },
      "5xl": {
        "value": "3rem",
        "pixelValue": "48px",
        "type": "dimension",
        "description": "5x large - display headings"
      },
      "6xl": {
        "value": "3.75rem",
        "pixelValue": "60px",
        "type": "dimension",
        "description": "6x large - hero text"
      }
    },
    "fontWeight": {
      "normal": {
        "value": "400",
        "type": "fontWeight",
        "description": "Regular weight - body text"
      },
      "medium": {
        "value": "500",
        "type": "fontWeight",
        "description": "Medium weight - emphasized text"
      },
      "semibold": {
        "value": "600",
        "type": "fontWeight",
        "description": "Semibold - subheadings, buttons"
      },
      "bold": {
        "value": "700",
        "type": "fontWeight",
        "description": "Bold - headings, strong emphasis"
      },
      "extrabold": {
        "value": "800",
        "type": "fontWeight",
        "description": "Extra bold - display headings"
      }
    },
    "lineHeight": {
      "none": {
        "value": "1",
        "type": "number",
        "description": "No line height - icons, badges"
      },
      "tight": {
        "value": "1.25",
        "type": "number",
        "description": "Tight - headings, titles"
      },
      "snug": {
        "value": "1.375",
        "type": "number",
        "description": "Snug - large text"
      },
      "normal": {
        "value": "1.5",
        "type": "number",
        "description": "Normal - body text (default)"
      },
      "relaxed": {
        "value": "1.625",
        "type": "number",
        "description": "Relaxed - comfortable reading"
      },
      "loose": {
        "value": "2",
        "type": "number",
        "description": "Loose - spacious text blocks"
      }
    },
    "letterSpacing": {
      "tighter": {
        "value": "-0.05em",
        "type": "dimension",
        "description": "Tighter spacing - large headings"
      },
      "tight": {
        "value": "-0.025em",
        "type": "dimension",
        "description": "Tight spacing - headings"
      },
      "normal": {
        "value": "0",
        "type": "dimension",
        "description": "Normal spacing - body text (default)"
      },
      "wide": {
        "value": "0.025em",
        "type": "dimension",
        "description": "Wide spacing - small text"
      },
      "wider": {
        "value": "0.05em",
        "type": "dimension",
        "description": "Wider spacing - all-caps text"
      },
      "widest": {
        "value": "0.1em",
        "type": "dimension",
        "description": "Widest spacing - very spaced out"
      }
    },
    "textDecoration": {
      "none": {
        "value": "none",
        "type": "textDecoration"
      },
      "underline": {
        "value": "underline",
        "type": "textDecoration"
      },
      "lineThrough": {
        "value": "line-through",
        "type": "textDecoration"
      }
    },
    "textTransform": {
      "none": {
        "value": "none",
        "type": "textTransform"
      },
      "uppercase": {
        "value": "uppercase",
        "type": "textTransform"
      },
      "lowercase": {
        "value": "lowercase",
        "type": "textTransform"
      },
      "capitalize": {
        "value": "capitalize",
        "type": "textTransform"
      }
    },
    "styles": {
      "display": {
        "fontFamily": "{typography.fontFamily.display}",
        "fontSize": "{typography.fontSize.5xl}",
        "fontWeight": "{typography.fontWeight.extrabold}",
        "lineHeight": "{typography.lineHeight.tight}",
        "letterSpacing": "{typography.letterSpacing.tighter}",
        "description": "Display text - hero sections"
      },
      "h1": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.4xl}",
        "fontWeight": "{typography.fontWeight.bold}",
        "lineHeight": "{typography.lineHeight.tight}",
        "letterSpacing": "{typography.letterSpacing.tight}",
        "description": "Heading 1 - page titles"
      },
      "h2": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.3xl}",
        "fontWeight": "{typography.fontWeight.bold}",
        "lineHeight": "{typography.lineHeight.tight}",
        "letterSpacing": "{typography.letterSpacing.tight}",
        "description": "Heading 2 - section titles"
      },
      "h3": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.2xl}",
        "fontWeight": "{typography.fontWeight.semibold}",
        "lineHeight": "{typography.lineHeight.snug}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "description": "Heading 3 - subsection titles"
      },
      "h4": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.xl}",
        "fontWeight": "{typography.fontWeight.semibold}",
        "lineHeight": "{typography.lineHeight.snug}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "description": "Heading 4 - component titles"
      },
      "bodyLarge": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.lg}",
        "fontWeight": "{typography.fontWeight.normal}",
        "lineHeight": "{typography.lineHeight.relaxed}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "description": "Large body text - emphasized content"
      },
      "body": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.base}",
        "fontWeight": "{typography.fontWeight.normal}",
        "lineHeight": "{typography.lineHeight.normal}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "description": "Body text - default paragraph text"
      },
      "bodySmall": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.sm}",
        "fontWeight": "{typography.fontWeight.normal}",
        "lineHeight": "{typography.lineHeight.normal}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "description": "Small body text - secondary content"
      },
      "caption": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.xs}",
        "fontWeight": "{typography.fontWeight.normal}",
        "lineHeight": "{typography.lineHeight.normal}",
        "letterSpacing": "{typography.letterSpacing.wide}",
        "description": "Caption - labels, timestamps, metadata"
      },
      "code": {
        "fontFamily": "{typography.fontFamily.mono}",
        "fontSize": "{typography.fontSize.sm}",
        "fontWeight": "{typography.fontWeight.normal}",
        "lineHeight": "{typography.lineHeight.normal}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "description": "Code text - inline code"
      },
      "button": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.sm}",
        "fontWeight": "{typography.fontWeight.semibold}",
        "lineHeight": "{typography.lineHeight.none}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "textTransform": "{typography.textTransform.none}",
        "description": "Button text"
      },
      "label": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.sm}",
        "fontWeight": "{typography.fontWeight.medium}",
        "lineHeight": "{typography.lineHeight.normal}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "description": "Form labels"
      },
      "link": {
        "fontFamily": "{typography.fontFamily.sans}",
        "fontSize": "{typography.fontSize.base}",
        "fontWeight": "{typography.fontWeight.medium}",
        "lineHeight": "{typography.lineHeight.normal}",
        "letterSpacing": "{typography.letterSpacing.normal}",
        "textDecoration": "{typography.textDecoration.underline}",
        "description": "Link text"
      }
    }
  },
  "responsiveTypography": {
    "mobile": {
      "h1": {
        "fontSize": "{typography.fontSize.3xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      },
      "h2": {
        "fontSize": "{typography.fontSize.2xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      },
      "h3": {
        "fontSize": "{typography.fontSize.xl}",
        "lineHeight": "{typography.lineHeight.snug}"
      },
      "display": {
        "fontSize": "{typography.fontSize.4xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      }
    },
    "tablet": {
      "h1": {
        "fontSize": "{typography.fontSize.4xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      },
      "h2": {
        "fontSize": "{typography.fontSize.3xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      },
      "h3": {
        "fontSize": "{typography.fontSize.2xl}",
        "lineHeight": "{typography.lineHeight.snug}"
      },
      "display": {
        "fontSize": "{typography.fontSize.5xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      }
    },
    "desktop": {
      "h1": {
        "fontSize": "{typography.fontSize.5xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      },
      "h2": {
        "fontSize": "{typography.fontSize.4xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      },
      "h3": {
        "fontSize": "{typography.fontSize.3xl}",
        "lineHeight": "{typography.lineHeight.snug}"
      },
      "display": {
        "fontSize": "{typography.fontSize.6xl}",
        "lineHeight": "{typography.lineHeight.tight}"
      }
    }
  }
}
