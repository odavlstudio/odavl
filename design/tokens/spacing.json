{
  "$schema": "https://json.schemastore.org/design-tokens.json",
  "description": "ODAVL Studio Design System - Spacing Tokens",
  "version": "2.0.0",
  "spacing": {
    "base": {
      "value": "0.25rem",
      "pixelValue": "4px",
      "type": "dimension",
      "description": "Base spacing unit (4px grid)"
    },
    "scale": {
      "0": {
        "value": "0",
        "pixelValue": "0px",
        "type": "dimension",
        "description": "Zero spacing"
      },
      "1": {
        "value": "0.25rem",
        "pixelValue": "4px",
        "type": "dimension",
        "description": "Smallest spacing - tight layouts"
      },
      "2": {
        "value": "0.5rem",
        "pixelValue": "8px",
        "type": "dimension",
        "description": "Extra small - compact elements"
      },
      "3": {
        "value": "0.75rem",
        "pixelValue": "12px",
        "type": "dimension",
        "description": "Small - comfortable padding"
      },
      "4": {
        "value": "1rem",
        "pixelValue": "16px",
        "type": "dimension",
        "description": "Base - default spacing"
      },
      "5": {
        "value": "1.25rem",
        "pixelValue": "20px",
        "type": "dimension",
        "description": "Medium - standard gaps"
      },
      "6": {
        "value": "1.5rem",
        "pixelValue": "24px",
        "type": "dimension",
        "description": "Large - comfortable separation"
      },
      "7": {
        "value": "1.75rem",
        "pixelValue": "28px",
        "type": "dimension",
        "description": "Extra large - generous spacing"
      },
      "8": {
        "value": "2rem",
        "pixelValue": "32px",
        "type": "dimension",
        "description": "2x - section spacing"
      },
      "10": {
        "value": "2.5rem",
        "pixelValue": "40px",
        "type": "dimension",
        "description": "2.5x - large sections"
      },
      "12": {
        "value": "3rem",
        "pixelValue": "48px",
        "type": "dimension",
        "description": "3x - major sections"
      },
      "16": {
        "value": "4rem",
        "pixelValue": "64px",
        "type": "dimension",
        "description": "4x - page sections"
      },
      "20": {
        "value": "5rem",
        "pixelValue": "80px",
        "type": "dimension",
        "description": "5x - large page sections"
      },
      "24": {
        "value": "6rem",
        "pixelValue": "96px",
        "type": "dimension",
        "description": "6x - hero sections"
      },
      "32": {
        "value": "8rem",
        "pixelValue": "128px",
        "type": "dimension",
        "description": "8x - extra large sections"
      }
    },
    "component": {
      "buttonPaddingX": {
        "sm": "{spacing.scale.3}",
        "md": "{spacing.scale.4}",
        "lg": "{spacing.scale.6}",
        "description": "Button horizontal padding"
      },
      "buttonPaddingY": {
        "sm": "{spacing.scale.2}",
        "md": "{spacing.scale.3}",
        "lg": "{spacing.scale.4}",
        "description": "Button vertical padding"
      },
      "inputPaddingX": {
        "sm": "{spacing.scale.3}",
        "md": "{spacing.scale.4}",
        "lg": "{spacing.scale.5}",
        "description": "Input horizontal padding"
      },
      "inputPaddingY": {
        "sm": "{spacing.scale.2}",
        "md": "{spacing.scale.3}",
        "lg": "{spacing.scale.4}",
        "description": "Input vertical padding"
      },
      "cardPadding": {
        "sm": "{spacing.scale.4}",
        "md": "{spacing.scale.6}",
        "lg": "{spacing.scale.8}",
        "description": "Card padding"
      },
      "cardGap": {
        "sm": "{spacing.scale.3}",
        "md": "{spacing.scale.4}",
        "lg": "{spacing.scale.6}",
        "description": "Card internal gaps"
      },
      "modalPadding": {
        "sm": "{spacing.scale.6}",
        "md": "{spacing.scale.8}",
        "lg": "{spacing.scale.10}",
        "description": "Modal padding"
      },
      "sidebarWidth": {
        "sm": "16rem",
        "md": "20rem",
        "lg": "24rem",
        "description": "Sidebar width"
      },
      "headerHeight": {
        "value": "4rem",
        "pixelValue": "64px",
        "description": "Header/navbar height"
      },
      "footerHeight": {
        "value": "3rem",
        "pixelValue": "48px",
        "description": "Footer height"
      }
    },
    "layout": {
      "containerPadding": {
        "mobile": "{spacing.scale.4}",
        "tablet": "{spacing.scale.6}",
        "desktop": "{spacing.scale.8}",
        "description": "Container horizontal padding"
      },
      "sectionGap": {
        "sm": "{spacing.scale.8}",
        "md": "{spacing.scale.12}",
        "lg": "{spacing.scale.16}",
        "description": "Gap between sections"
      },
      "columnGap": {
        "sm": "{spacing.scale.4}",
        "md": "{spacing.scale.6}",
        "lg": "{spacing.scale.8}",
        "description": "Gap between columns"
      },
      "rowGap": {
        "sm": "{spacing.scale.4}",
        "md": "{spacing.scale.6}",
        "lg": "{spacing.scale.8}",
        "description": "Gap between rows"
      },
      "maxWidth": {
        "xs": "20rem",
        "sm": "24rem",
        "md": "28rem",
        "lg": "32rem",
        "xl": "36rem",
        "2xl": "42rem",
        "3xl": "48rem",
        "4xl": "56rem",
        "5xl": "64rem",
        "6xl": "72rem",
        "7xl": "80rem",
        "full": "100%",
        "description": "Maximum container widths"
      }
    },
    "grid": {
      "columns": {
        "mobile": "4",
        "tablet": "8",
        "desktop": "12",
        "description": "Grid column counts"
      },
      "gutter": {
        "mobile": "{spacing.scale.4}",
        "tablet": "{spacing.scale.6}",
        "desktop": "{spacing.scale.8}",
        "description": "Grid gutter (gap between columns)"
      },
      "margin": {
        "mobile": "{spacing.scale.4}",
        "tablet": "{spacing.scale.6}",
        "desktop": "{spacing.scale.8}",
        "description": "Grid outer margins"
      }
    },
    "semantic": {
      "stackGap": {
        "xs": "{spacing.scale.2}",
        "sm": "{spacing.scale.3}",
        "md": "{spacing.scale.4}",
        "lg": "{spacing.scale.6}",
        "xl": "{spacing.scale.8}",
        "description": "Vertical stack gap"
      },
      "inlineGap": {
        "xs": "{spacing.scale.2}",
        "sm": "{spacing.scale.3}",
        "md": "{spacing.scale.4}",
        "lg": "{spacing.scale.6}",
        "xl": "{spacing.scale.8}",
        "description": "Horizontal inline gap"
      },
      "formFieldGap": {
        "value": "{spacing.scale.6}",
        "description": "Gap between form fields"
      },
      "formLabelGap": {
        "value": "{spacing.scale.2}",
        "description": "Gap between label and input"
      },
      "listGap": {
        "compact": "{spacing.scale.2}",
        "comfortable": "{spacing.scale.4}",
        "spacious": "{spacing.scale.6}",
        "description": "Gap between list items"
      },
      "iconGap": {
        "value": "{spacing.scale.2}",
        "description": "Gap between icon and text"
      },
      "touchTarget": {
        "min": "2.75rem",
        "comfortable": "3rem",
        "pixelValue": "44px",
        "description": "Minimum touch target size (WCAG)"
      }
    }
  },
  "breakpoints": {
    "sm": {
      "value": "640px",
      "type": "dimension",
      "description": "Small screens (tablets)"
    },
    "md": {
      "value": "768px",
      "type": "dimension",
      "description": "Medium screens (large tablets)"
    },
    "lg": {
      "value": "1024px",
      "type": "dimension",
      "description": "Large screens (desktops)"
    },
    "xl": {
      "value": "1280px",
      "type": "dimension",
      "description": "Extra large screens (large desktops)"
    },
    "2xl": {
      "value": "1536px",
      "type": "dimension",
      "description": "2x large screens (very large displays)"
    }
  },
  "zIndex": {
    "base": {
      "value": "0",
      "description": "Base z-index"
    },
    "dropdown": {
      "value": "1000",
      "description": "Dropdowns, popovers"
    },
    "sticky": {
      "value": "1020",
      "description": "Sticky headers"
    },
    "fixed": {
      "value": "1030",
      "description": "Fixed elements"
    },
    "modalBackdrop": {
      "value": "1040",
      "description": "Modal backdrops"
    },
    "modal": {
      "value": "1050",
      "description": "Modals"
    },
    "popover": {
      "value": "1060",
      "description": "Popovers"
    },
    "tooltip": {
      "value": "1070",
      "description": "Tooltips"
    },
    "toast": {
      "value": "1080",
      "description": "Toast notifications"
    }
  }
}
