{
  "name": "odavl-website-enhanced",
  "version": "0.1.0-enterprise",
  "private": true,
  "description": "ODAVL Enterprise Website - Enhanced version with comprehensive monitoring, quality assurance, and enterprise-grade features",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint --fix",
    "lint:check": "eslint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "guardian": "npx tsx src/utils/guardian.ts",
    "guardian:enhanced": "npx tsx src/utils/guardian-enhanced.ts",
    "i18n:sync": "npx tsx scripts/i18n-sync.ts",
    "i18n:validate": "npx tsx scripts/i18n-validate.ts",
    "performance:audit": "npx tsx src/utils/performance-auditor.ts",
    "security:scan": "npx tsx src/utils/security-scanner.ts",
    "accessibility:audit": "npx tsx src/utils/accessibility-auditor.ts",
    "ci:quality": "npm run lint:check && npm run type-check && npm run test && npm run i18n:sync && npm run guardian:enhanced && npm run build",
    "ci:reports": "mkdir -p reports/ci && npm run performance:audit && npm run security:scan && npm run accessibility:audit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:build": "typedoc src --out docs/api",
    "analyze:bundle": "npm run build:analyze && npx @next/bundle-analyzer .next",
    "validate:all": "npm run type-check && npm run lint:check && npm run test && npm run guardian:enhanced"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/nextjs": "^8.38.0",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "next-intl": "^4.3.9",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/bundle-analyzer": "^15.5.4",
    "@next/mdx": "^15.5.4",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/nextjs": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "axe-core": "^4.10.2",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-storybook": "^0.11.1",
    "jsdom": "^25.0.1",
    "lighthouse": "^12.2.1",
    "pa11y": "^8.0.0",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.4",
    "storybook": "^8.4.7",
    "typedoc": "^0.27.4",
    "typescript": "^5",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  }
}
