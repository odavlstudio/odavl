{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "apps/*/src",
        "odavl-studio/*/src",
        "packages/*/src"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": [
      "ES2023",
      "DOM"
    ]
  },
  "include": [
    "apps/studio-cli/**/*",
    "packages/types/**/*",
    "packages/email/**/*",
    "packages/github-integration/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".tmp",
    ".vite",
    ".turbo",
    "odavl-studio/**",
    "tests/fixtures/**",
    "tests/**",
    "scripts/**",
    "tools/**",
    "packages/sdk/**",
    "packages/auth/**",
    "packages/core/**"
  ]
}