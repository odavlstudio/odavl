{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "apps/*/src/*",
        "odavl-website/src/*"
      ]
    }
  },
  "include": [
    "apps",
    "scripts",
    "tests",
    "tools",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules.backup",
    "src.backup",
    "dist",
    ".tmp",
    ".vite",
    ".turbo"
  ]
}