# Production Environment Variables for ODAVL Insight Cloud
# Copy this file to .env.production and fill in your Railway credentials

# Database (Railway PostgreSQL)
DATABASE_URL="postgresql://postgres:PASSWORD@containers-us-west-XXX.railway.app:PORT/railway?sslmode=require"

# JWT Authentication
JWT_SECRET="your-production-jwt-secret-min-32-chars-very-secure-random-string"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Environment
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# Optional: Email (for email verification & password reset)
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASSWORD="your-sendgrid-api-key"
# EMAIL_FROM="noreply@odavl.com"

# Optional: Monitoring
# SENTRY_DSN="your-sentry-dsn"
# SENTRY_ORG="odavl"
# SENTRY_PROJECT="insight-cloud"

# Optional: Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Security
ALLOWED_ORIGINS="https://your-app.vercel.app"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15m"
