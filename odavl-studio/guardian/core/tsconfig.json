{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "..",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "lib": [
      "es2022",
      "dom"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": false
  },
  "include": [
    "src/**/*",
    "../inspectors/**/*",
    "../fixers/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}