# Environment variables for ODAVL Guardian

# Database (PostgreSQL)
# Note: connection_limit and pool_timeout for Prisma connection pooling
DATABASE_URL="postgresql://postgres:password@localhost:5432/odavl_guardian?schema=public&connection_limit=10&pool_timeout=5"

# Redis (for Bull queues)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Next.js
NEXT_PUBLIC_API_URL="http://localhost:3003"
NEXT_PUBLIC_APP_URL="http://localhost:3003"
NODE_ENV="development"

# Socket.io
SOCKET_IO_PORT=3004

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_SEND_IN_DEV="false"
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Logging
LOG_LEVEL="info"  # debug, info, warn, error

# SMTP Email Configuration
SMTP_HOST=""
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="Guardian <noreply@guardian.local>"

# Alert Recipients
ALERT_EMAIL_RECIPIENTS="admin@example.com,ops@example.com"

# Slack Integration
SLACK_WEBHOOK_URL=""

# Webhook Alerts
ALERT_WEBHOOK_URL=""
ALERT_WEBHOOK_SECRET=""

# OpenTelemetry Tracing
ENABLE_TRACING="false"  # Set to "true" to enable distributed tracing
OTEL_SERVICE_NAME="guardian-api"
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318/v1/traces"
OTEL_EXPORTER_OTLP_HEADERS=""  # Optional: Authorization header for OTLP endpoint

# Performance Optimization
SLOW_QUERY_THRESHOLD=100  # milliseconds - log queries slower than this

# Observability Backends
# Jaeger UI: http://localhost:16686
# Zipkin UI: http://localhost:9411
# Prometheus: http://localhost:9090
# Grafana: http://localhost:3000
