{
  "id": "esm-hygiene",
  "name": "ESM Hygiene",
  "description": "Ensures proper ESM module structure",
  "trust": 0.8,
  "priority": 7,
  "condition": {
    "type": "threshold",
    "rules": [
      {
        "metric": "esmIssues",
        "operator": ">=",
        "value": 1
      }
    ]
  },
  "actions": [
    {
      "type": "shell",
      "command": "pnpm -s exec eslint . --fix",
      "description": "Fix ESM issues"
    }
  ]
}