# Production Environment Variables Template
# Copy to .env.production and fill in actual values

# Database
DATABASE_URL="postgresql://user:password@host:5432/odavl_production?sslmode=require"

# Authentication
NEXTAUTH_SECRET="<64-char random string - use: openssl rand -hex 64>"
NEXTAUTH_URL="https://console.odavl.studio"

# OAuth Providers
GITHUB_ID="<GitHub OAuth App Client ID>"
GITHUB_SECRET="<GitHub OAuth App Secret>"
GOOGLE_ID="<Google OAuth Client ID>"
GOOGLE_SECRET="<Google OAuth Client Secret>"

# Stripe Billing
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_ID_PRO="price_..."
STRIPE_PRICE_ID_ENTERPRISE="price_..."

# Redis (BullMQ, Guardian workers)
REDIS_URL="redis://default:password@host:6379"
REDIS_TLS="true"

# Storage (Guardian screenshots/videos)
S3_BUCKET="odavl-guardian-assets"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="<AWS Access Key>"
S3_SECRET_ACCESS_KEY="<AWS Secret Key>"
# Or use GCS:
# GCS_BUCKET="odavl-guardian-assets"
# GCS_PROJECT_ID="<Google Cloud Project ID>"
# GCS_KEYFILE="<Path to service account JSON>"

# Monitoring & Errors
SENTRY_DSN="https://...@o...ingest.us.sentry.io/..."
SENTRY_AUTH_TOKEN="<Sentry Auth Token>"

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL="https://...upstash.io"
UPSTASH_REDIS_REST_TOKEN="<Upstash Token>"

# Email (SendGrid or SMTP)
SENDGRID_API_KEY="SG..."
# Or SMTP:
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="<Email>"
# SMTP_PASSWORD="<Password>"

# Socket.io (Real-time notifications)
SOCKETIO_PORT="3001"
SOCKETIO_CORS_ORIGIN="https://console.odavl.studio"

# Public API v1
API_RATE_LIMIT_WINDOW="60" # seconds
API_RATE_LIMIT_MAX="100" # requests per window
